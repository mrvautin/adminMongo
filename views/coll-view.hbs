<div class="col-lg-10">
	<ol class="breadcrumb">
		<li><a href="{{context}}/">{{__ "Home"}}</a></li>
		<li><a href="{{context}}/{{conn_name}}">{{conn_name}}</a>&nbsp;({{__ "connection"}})</li>
		<li><a href="{{context}}/{{conn_name}}/{{db_name}}">{{db_name}}</a>&nbsp;({{__ "database"}})</li>
		<li><a href="{{context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/view">{{coll_name}}</a>&nbsp;({{__ "collection"}})</li>
	</ol>
    <div class="col-lg-12 no-side-pad">
        <div class="col-sm-12 col-md-12 col-lg-4 text-center">
            <div class="action_button"><a class="btn btn-success btn-sm" href="{{context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/new">{{__ "New document"}}</a></div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 text-center">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-warning btn-sm action_button" data-toggle="modal" data-target="#searchModal">{{__ "Simple search"}}</button>
                <button type="button" class="btn btn-default btn-sm" id="btnqueryDocuments" data-toggle="modal" data-target="#queryDocuments">{{__ "Query documents"}}</button>
                <button type="button" class="btn btn-danger btn-sm action_button" id="searchReset">{{__ "Reset"}}</button>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 text-center">
            <a class="btn btn-info btn-sm" href="{{context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/indexes">{{__ "Manage indexes"}}</a></div>
        </div>
        <div id="doc_load_placeholder" class="col-lg-12"><h3 class="text-center">{{__ "Finding docs"}} <i class="fa fa-spinner fa-spin"></i></h3></div>
        <div id="doc_none_found" class="col-lg-12 hidden"><h3 class="text-center">{{__ "No documents found"}}</h3></div>
        <div id="coll_docs"></div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div id="pager" class="text-center pagination-sm"></div>
    </div>
    <input type="hidden" id="page_num" value="{{page_num}}">
    <input type="hidden" id="key_val" value="{{key_val}}">
    <input type="hidden" id="value_val" value="{{value_val}}">
</div>
