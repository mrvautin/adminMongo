<div class="col-lg-10">
	<ol class="breadcrumb">
		<li><a href="{{context}}/">{{__ "Home"}}</a></li>
		<li><a href="{{context}}/{{conn_name}}">{{conn_name}}</a>&nbsp;({{__ "connection"}})</li>
		<li><a href="{{context}}/{{conn_name}}/{{db_name}}">{{db_name}}</a>&nbsp;({{__ "database"}})</li>
		<li><a href="{{context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/view">{{coll_name}}</a>&nbsp;({{__ "collection"}})</li>
	</ol>
	<div class="col-lg-12 no-side-pad">
		<a href="{{context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/view" class="btn btn-warning btn-sm pull-left action_button">{{__ "Back"}}</a>
		<button class="btn btn-success btn-sm pull-right action_button" id="coll_addindex">{{__ "Add index"}}</button>
	</div>
	<div class="col-lg-10 no-side-pad">
		<div class="index_json" id="json">{}</div>
	</div>
	<div class="col-lg-2 no-side-pad">
		<div class="text-center">
			<h2>{{__ "Options"}}</h2>
			<div class="checkbox">
				<label>
					<input type="checkbox" id="index_unique" checked> {{__ "Unique"}}?
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" id="index_sparse" checked> {{__ "Sparse"}}?
				</label>
			</div>
		</div>
	</div>
	<table class="table table-bordered index-table">
		<th>{{__ "Name"}}</th>
		<th>{{__ "Key"}}</th>
		<th>{{__ "Unique"}}</th>
		<th>{{__ "Sparse"}}</th>
		<th>{{__ "Action"}}</th>
		{{#each coll_indexes}}
			<tr>
				<td>{{this.name}}</td>
				<td>{{this.key}}</td>
				<td>{{niceBool this.unique}}</td>
				<td>{{niceBool this.sparse}}</td>
				<td><button class="btn btn-danger btn-sm" onclick="dropIndex('{{@index}}');">{{__ "Delete index"}}</button></td>
			</tr>
		{{/each}}
	</table>
</div>